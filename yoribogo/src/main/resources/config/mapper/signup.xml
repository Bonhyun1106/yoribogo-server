<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<!-- 이 xml을 사용할 클래스 경로를 준다. 패키지명과 함께..   -->
<mapper namespace="kr.co.yoribogo.repository.dao.SignupMapper">
	
	 <select id="selectMemId" resultType="">
		select mem_id
		  from tb_member
	 </select>
	 <select id="selectMemEmail" parameterType="member" resultMap="MemberMap">
		select *
		  from tb_member
		 where mem_id = #{memId}
		   and CryptString.decrypt(mem_password,'key') = #{memPassword}
	 </select>
	
</mapper>